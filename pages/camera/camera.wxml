<!--camera.wxml-->
<view class="CameraPage">
  <!-- 摄像与文字编辑区 -->
  <view class="CameraTextArea">
    <!-- 摄像区 -->
    <view class="CameraArea">
      <van-image
      width="100%"
      height="100%"
      fit="contain"
      model:src="{{ImageSrc}}"
    />
    </view>
    <!-- 文字编辑区 -->
    <view class="TextArea">

    </view>
  </view>
  <!-- 功能区 -->
  <view class="TakeArea">
<!--    
    <van-icon model:name="{{PhotoAreaSrc}}" size="40px" bind:click="onPhoto" class="take" id="photo"/> -->
    <van-icon model:name="{{TakeAreaSrc}}" size="65px" bind:click="onTake" class="take" id="take"/>

  </view>


</view>

